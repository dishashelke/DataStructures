
public class SortedArray {

	public static int firstIndex(int []array, int key) {
		int firstIndex = -1;
		int low = 0;
		int high = array.length-1;
		while(low <= high) {
			int mid = (high+low) / 2;
			if(array[mid] == key){
				high = mid - 1;
				firstIndex = mid;
			}
			else if(array[mid] < key)//search in left half
				high = mid - 1;
			else//search in right half
				low = mid  + 1;
		}
		return firstIndex;
	}
	
	public static void main(String[] args) {
		int []sortedArray = {1,2,2,3,3,3,4,4,5,5,5,6,7,7,7,7};
		System.out.println("first occurrence of 2 is "+firstIndex(sortedArray, 2));
	}

}
