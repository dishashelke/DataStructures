
public class Heap {

	public final void swap(int[] array, int src, int dest)
	{
		int temp = array[src];
		array[src] = array[dest];
		array[dest] = temp; 
	}
	public int left(int i){
		return 2*i+1;
	}
	public int right(int i){
		return 2*i+2;
	}
	public void maxHeapify(int array[], int i){
		int left = left(i);
		int right = right(i);
		int largest = i;// largest store the index of largest element amongst the parent and its 2 children
		if((left < array.length) && (array[left] > array[largest]))
			largest = left;
		if((right < array.length) && (array[right] > array[largest]))
			largest = right;
		if(largest != i){
			swap(A, i, largest);
			
		}
	}
	
	public static void main(String[] args) {

	}

}
