package stack;

import java.util.Stack;

public class BalancedParanthesis {
	
	public boolean isBalancedParanthesis(String expression) {
		Stack<Character> balanced = new Stack<Character>();
		for(int i = 0; i < expression.length(); i++){
			char current = expression.charAt(i);
			if(current == '(' || current == '[' || current == '{') {
				balanced.push(current);
			}
			else if(current == ')' || current ==']' || current =='}'){
				//char top = balanced.peek();
				if(balanced.isEmpty())
					return false;
			}
		}
	}

	public static void main(String[] args) {
		/*System.out.println("PARANTHESIS: ");
		MyStack<Character> para_stack = new MyStack<Character>(40);
		String exp = "{[()}";
		para_stack.checkPara(exp);*/

	}

}
